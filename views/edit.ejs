<form method="post" action="/edit" class="send_wb well form-inline">
    <h5>编辑内容</h5>
    <div class="input">
        <textarea name="post" id="post" cols="81" rows="4"><%= content %></textarea>
    </div>
    <input type="hidden" name="wb_id" value="<%= id%>">
    <div class="func_area">
        <button type="submit" class="send-btn">更新</button>
    </div>
</form>
  