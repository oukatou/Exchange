<form class="well col-sm-2 col-sm-offset-5" method="post" action='/reg'>
    <fieldset>
        <legend>用户注册</legend>
        <div class="form-group">
            <label class="control-label" for="username">用户名</label>
            <div>
                <input required type="text" class="form-control" id="username" name="username">
                <p class="help-block">你的用户名称用于登录和显示。</p> </div>
            </div>
        </div>    
        <div class="form-group">
            <label class="control-label" for="password">密码</label>
            <div>
                <input required type="password" class="form-control" id="password" name="password">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label" for="password-repeat">重复输入密码</label>
            <div>
                <input required type="password" class="form-control" id="password-repeat" name="password-repeat">
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">注册</button>
        </div>
        </fieldset>
    </form>        