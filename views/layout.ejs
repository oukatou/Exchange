<html>
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Weibo</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" type="text/css" media="screen" href="/css/bootstrap.min.css" />
        <link rel="stylesheet" type="text/css" href="/css/util.css">
        <script src="/js/jquery.min.js"></script>
        <script src="/js/bootstrap.min.js"></script>
        <script src="/js/vue.js"></script>
        <% if(user) {%>
            <script>
                window.CURRENT_USER = {
                    username: '<%= user.username%>'
                }
            </script>
        <%}%>
    </head> 
    <body>
        <header>
            <div class='navbar navbar-default navbar-fixed-top'>
                <div class="container-fluid">
                    <div class='navbar-header'>
                        <a class='navbar-brand' href="/">Microblog</a>
                    </div> 
                        <ul class='nav navbar-nav navbar-right'>
                            <% if(!user){ %>
                            <li><a class="glyphicon glyphicon-log-in" href="/login">登录</a></li>
                            <li><a class="glyphicon glyphicon-user" href="/reg">注册</a></li>
                            <% }else { %>
                            <li><a class="glyphicon glyphicon-home" href="/user/<%=user.username %>">我的首页</a></li>   
                            <li><a class="glyphicon glyphicon-log-out" href="/logout">登出</a></li>
                            <% } %> 
                        </ul>
                    </div>
                </div>
           </div>
        </header>   
        <div id ="container" class="container">
            <div id='app'>
                <% if(success) { %>
                    <div class='alert-dismissable alert alert-success '>
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                            &times;
                        </button>
                        <%= success %>
                    </div>
                <% } %>
                <% if(error) { %>
                    <div class='alert alert-danger alert-dismissable'>
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                            &times;
                        </button>
                        <%= error %>
                    </div>
                <% } %>
                <div class='middle'>
                    <%- body %>   
                </div>
                <div class='leftnav'>
                    <ul>
                        <% if (user && user.username == username ) {%>
                            <li id='home' :class="{active: isUserpage}"><a href="/get_user/<%= username %>"><span>我的首页</span></a></li>
                        <% }else if(username){ %>
                            <li id='home' :class="{active: isUserpage}"><a href="/get_user/<%= username %>"><span>他的首页</span></a></li>
                        <% }else{%>     
                            <li id='home' :class="{active: isHomepage}"><a href="/all"><span>首页</span></a></li>
                        <% }%>  
                        <% if (user && user.username == username) { %>
                            <li id='collect' :class="{active: isCollectpage}"><a href="#"><span>我的收藏</span></a></li>
                        <% }%>    
                        <% if (user && user.username == username) { %>
                            <li id='like' :class="{active: isLikepage}"><a href="/get_like/<%= user.username%>"><span>我的赞</span></a></li>
                        <% }else if (username){ %>
                            <li id='like' :class="{active: isLikepage}"><a href="/get_like/<%= username%>"><span>他的赞</span></a></li>
                        <% } %>    
                    </ul>
                </div>
                <div class='right'>
                    <% if (user && user.username == username) {%>
                    <div class="user_info">
                        <div class="name"><%= user.username %></div>
                        <div class="user_atten">
                            <ul>
                                <li><a href=""><strong>1</strong><span>关注</span></a> </li>
                                <li><a href=""><strong>2</strong><span>粉丝</span></a> </li>
                                <li><a href=""><strong class='count'><%= posts_count%></strong><span>微博</span></a> </li>
                            </ul>     
                        </div>
                    </div>
                    <% }else if (username) {%>
                        <div class="user_info">
                            <div class="name"><%= username %></div>
                            <div class="user_atten">
                                <ul>
                                    <li><a href=""><strong>1</strong><span>关注</span></a> </li>
                                    <li><a href=""><strong>2</strong><span>粉丝</span></a> </li>
                                    <li><a href=""><strong class='count'><%= posts_count%></strong><span>微博</span></a> </li>
                                </ul>     
                            </div>
                        </div>
                    <% }else{ %>
                        <%- include('login') %>
                    <% } %>
                </div>
            </div>
        </div>
        <script src='/js/util.js'></script>
    </body>
</html>
